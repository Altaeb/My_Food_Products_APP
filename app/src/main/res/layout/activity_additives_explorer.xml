<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorOfBackgroundActivity"
    tools:context="maelumat.almuntaj.abdalfattah.altaeb.views.AdditivesExplorer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/colorOfActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:id="@+id/toolbar"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/additiveRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
        />

        <include layout="@layout/navigation_bottom" />

    </LinearLayout>

</RelativeLayout>
