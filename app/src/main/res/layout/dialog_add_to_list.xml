<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/ColorOfBackgroundActivity"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="@color/ColorOfBackgroundActivity"
        android:id="@+id/rv_dialogAddToList"/>

    <maelumat.almuntaj.abdalfattah.altaeb.utils.CustomTextView
        android:id="@+id/tvAddToNewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorOfBackgroundActivity"
        android:padding="@dimen/padding_short"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="@dimen/font_large"
        android:text="@string/txt_add_to_new_list"
        app:drawableLeftCompat="@drawable/plus"
        app:layout_constraintTop_toBottomOf="@id/rv_dialogAddToList"/>

</androidx.constraintlayout.widget.ConstraintLayout>
